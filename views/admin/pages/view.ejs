<%- include('../main/header.ejs') %>
    <%- include('../main/navbar.ejs') %>
        <div class="container">
            <div class="row mb-3">

                <div class="col-6">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="<%= product.mainImg %>" alt="First slide">
                            </div>
                            <% product.subImg.forEach((image, index)=> { %>
                                <div class="carousel-item ">
                                    <img class="d-block w-100" src="<%= image %>" alt="Slide">
                                </div>
                                <% }) %>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

                <div class="col-4">
                    <h4>
                        <%= product.name %>
                    </h4>
                    <p>Category: <%= product.category %>
                    </p>
                    <p>Brand: <%= product.brand %>
                    </p>
                    <p>Price: <%= product.price %>
                    </p>
                    <% if (product.ram) { %>
                        <p>Ram: <%= product.ram %>
                        </p>
                        <% } %>
                            <% if (product.storage) { %>
                                <p>Storage: <%= product.storage %>
                                </p>
                                <% } %>
                                    <style>
                                        .quantity-green {
                                            color: green;
                                        }

                                        .quantity-red {
                                            color: red;
                                        }
                                    </style>
                                    <p>Quantity: <span
                                            class="<%= product.quantity > 0 ? 'quantity-green' : 'quantity-red' %>">
                                            <%= product.quantity %></span>
                                                <div>
                                                    <a href="/admin/products/<%= product._id %>/edit"
                                                        class="btn btn-primary">Edit</a>
                                                </div>
                </div>
            </div>
            <h1 class="mb-3">Comments</h1>

            <%- include('../main/comment.ejs') %>
        </div>

        <%- include('../main/footer.ejs') %>